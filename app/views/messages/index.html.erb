<h1>allo</h1>

<% if @messages.any? %>
  <% @messages.each do |message| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <p>TO: <%= message.to  %></p>
      <p>BODY: <%= message.body  %></p>
      <p>FROM: <%= message.from %></p>
    </div>
  </div>
  <% end %>
<% else %>
  <i><u>No messages</u></i> <br>
<% end %>

<%= link_to 'Send Message', new_message_path %>
